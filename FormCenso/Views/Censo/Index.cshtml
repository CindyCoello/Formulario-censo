@{
    ViewData["Title"] = "Censo";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Censo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A premium admin dashboard template by mannatthemes" name="description" />
    <meta content="Mannatthemes" name="author" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">

    <!-- App css -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/css/metismenu.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />

    <!-- Alerts-->
    <link href="~/plugins/toastr/toastr.css" rel="stylesheet" type="text/css" />
    

    <style>
        .form-control[readonly] {
            background-color: rgba(219, 216, 216, 0.81);
            opacity: 1;
        }

        .card-header {
            max-height: 20%;
        }

        h4 {
            font-size: 1.2em;
            font-weight: 700;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

        #Voto {
            background-color: darkgray;
            width: 30px;
            height: 20px;
            color: white;
            border-radius: 3px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        div.card {
            width: 150% !important;
        }
    </style>

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h4>Información Votantes</h4>
                            </div>

                            <div class="col-md-6">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="N° Identidad..." id="ident" maxlength="13">
                                    <button class="btn btn-primary" type="button"  onclick="Buscar()"><i class="mdi mdi-account-search"></i></button>
                                </div>
                                <label class="text-danger" id="messageError"></label>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form>
                            <input type="hidden" id="censoId" value="0" />
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Identidad</label>
                                        <input type="text" id="identidad" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Nombre</label>
                                        <input type="text" id="Nombre" class="form-control" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label>Departamento</label>
                                            <input type="text" id="Departamento" class="form-control" readonly />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Municipio</label>
                                        <input type="text" id="Municipio" class="form-control" readonly />
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Lugar</label>
                                        <input type="text" id="Colonia" class="form-control" readonly />
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Centro de Votacion</label>
                                        <input type="text" id="CentroV" class="form-control" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>MER</label>
                                        <input type="text" id="mer" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Numero de Linea</label>
                                        <input type="text" id="Linea" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>¿Voto Realizado?</label>
                                        <div id="Voto">No</div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button class="btn btn-secondary" type="button" onclick="Clean()">Cancelar</button>
                                    <button class="btn btn-primary" type="button" id="btnVotar" onclick="Votar()"style="display:none;">Votar</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/metisMenu.min.js"></script>
    <script src="~/js/waves.min.js"></script>
    <script src="~/js/jquery.slimscroll.min.js"></script>


    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script src="~/js/app/main.js"></script>
    <script src="~/js/form-censo.js"></script>

    <script src="~/js/app.js"></script>


</body>

</html>

